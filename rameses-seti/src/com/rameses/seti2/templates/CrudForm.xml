<workunit>
    <invokers>
        <invoker type="formActions" caption="New" action="create"  visibleWhen="#{createAllowed &amp;&amp; mode=='read'}" immediate="true"/>
        <invoker type="formActions" caption="Edit" action="edit" visibleWhen="#{editAllowed &amp;&amp; mode=='read'}" immediate="true"/>        
        <invoker type="formActions" caption="Save" action="save" visibleWhen="#{mode=='edit' || mode=='create'}" />        
        <invoker type="formActions" caption="Cancel" action="unedit" visibleWhen="#{mode=='edit'}" immediate="true"/>  
        <invoker type="formActions" caption="Undo" action="undo" visibleWhen="#{mode=='edit'}" immediate="true"/>  
    </invokers>
</workunit> 
